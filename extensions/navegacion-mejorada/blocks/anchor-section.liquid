{%- comment -%}
  Bloque: anchor-section.liquid
  Añade puntos de ancla invisibles a cualquier sección
{%- endcomment -%}

{%- if block.settings.anchor_id != blank -%}
  <div 
    id="{{ block.settings.anchor_id | handle }}" 
    class="section-anchor"
    data-scroll-offset="{{ block.settings.scroll_offset }}"
    style="position: absolute; top: -1px; visibility: hidden;"
    aria-hidden="true">
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Punto de Ancla",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "ID del Ancla",
      "placeholder": "desarrollo",
      "info": "Nombre único para esta sección (sin espacios ni caracteres especiales)"
    },
    {
      "type": "number",
      "id": "scroll_offset",
      "label": "Ajuste de posición (px)",
      "info": "Ajuste fino opcional. Negativo = más arriba, Positivo = más abajo",
      "default": 0
    }
  ]
}
{% endschema %}