{% comment %}
  Snippet para incluir la navegación de anclas
  Uso: {% render 'anchor-navigation' %}
{% endcomment %}

{%- liquid
  assign nav_position = section.settings.nav_position | default: 'fixed-left'
  assign nav_style = section.settings.nav_style | default: 'dots'
  assign show_labels = section.settings.show_labels | default: false
  assign header_offset = section.settings.header_offset | default: 80
  assign scroll_duration = section.settings.scroll_duration | default: 600
-%}

<!-- Contenedor para la navegación de anclas -->
<div class="anchor-navigation anchor-nav-{{ nav_position }} anchor-nav-style-{{ nav_style }}" 
     data-show-labels="{{ show_labels }}">
  <!-- El menú se generará dinámicamente aquí -->
</div>

<!-- Estilos para la navegación -->
<style>
  .anchor-navigation {
    position: fixed;
    z-index: 999;
    transition: all 0.3s ease;
  }

  /* Posiciones */
  .anchor-nav-fixed-left {
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
  }

  .anchor-nav-fixed-right {
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
  }

  .anchor-nav-top {
    top: {{ header_offset }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
  }

  /* Lista de navegación */
  .anchor-nav-list {
    margin: 0;
    padding: 0;
  }

  .anchor-nav-items {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .anchor-nav-top .anchor-nav-items {
    flex-direction: row;
    gap: 25px;
  }

  /* Enlaces */
  .anchor-nav-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #666;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  /* Estilo de puntos */
  .anchor-nav-style-dots .anchor-nav-link::before {
    content: '';
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #ddd;
    border: 2px solid #666;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .anchor-nav-style-dots .anchor-nav-link.active-anchor::before,
  .anchor-nav-style-dots .anchor-nav-link:hover::before {
    background: #333;
    transform: scale(1.3);
  }

  /* Estilo de líneas */
  .anchor-nav-style-lines .anchor-nav-link::before {
    content: '';
    width: 30px;
    height: 2px;
    background: #999;
    transition: all 0.3s ease;
    display: inline-block;
    margin-right: 10px;
  }

  .anchor-nav-style-lines .anchor-nav-link.active-anchor::before,
  .anchor-nav-style-lines .anchor-nav-link:hover::before {
    width: 50px;
    background: #333;
  }

  /* Etiquetas */
  .anchor-navigation[data-show-labels="true"] .anchor-nav-link {
    padding: 8px 15px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    border: 1px solid #ddd;
    font-size: 14px;
  }

  .anchor-navigation[data-show-labels="true"] .anchor-nav-link.active-anchor {
    background: #333;
    color: white;
    border-color: #333;
  }

  .anchor-navigation[data-show-labels="false"] .anchor-nav-link {
    font-size: 0;
  }

  .anchor-navigation[data-show-labels="false"] .anchor-nav-link::before {
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .anchor-nav-fixed-left {
      left: 10px;
    }

    .anchor-nav-fixed-right {
      right: 10px;
    }

    .anchor-navigation[data-show-labels="true"] .anchor-nav-link {
      font-size: 12px;
      padding: 6px 12px;
    }
  }

  /* Animación de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .anchor-nav-item {
    animation: fadeInUp 0.5s ease forwards;
    opacity: 0;
  }

  .anchor-nav-item:nth-child(1) { animation-delay: 0.1s; }
  .anchor-nav-item:nth-child(2) { animation-delay: 0.2s; }
  .anchor-nav-item:nth-child(3) { animation-delay: 0.3s; }
  .anchor-nav-item:nth-child(4) { animation-delay: 0.4s; }
  .anchor-nav-item:nth-child(5) { animation-delay: 0.5s; }

  /* Ocultar anclas vacías */
  .section-anchor {
    display: block;
    position: relative;
    top: -{{ header_offset }}px;
    visibility: hidden;
    height: 0;
  }
</style>

<!-- Cargar el script de navegación -->
<script 
  src="{{ 'navegacion-anclas.js' | asset_url }}"
  data-duration="{{ scroll_duration }}"
  data-offset="{{ header_offset }}"
  data-update-url="false"
  data-menu-selector=".anchor-navigation"
  data-active-class="active-anchor"
  data-allow-query="true"
  defer>
</script>